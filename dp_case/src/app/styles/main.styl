@import "init"

#content
  width 790px
  height 580px
  margin 0px auto
  position relative

  #map
    width 785px
    height 550px
    position relative

    >img
      position absolute
    #argentina
      top 370px
      left 230px
    #brazil
      top 300px
      left 250px
    #bulgaria
      top 190px
      left 405px
    #california
      top 200px
      left 130px
    #china
      top 200px
      left 550px
    #european_union
      top 205px
      left 345px
    #greece
      top 215px
      left 395px
    #hong_kong
      top 230px
      left 570px
    #hungary
      top 180px
      left 380px
    #italy
      top 205px
      left 372px
    #japan
      top 205px
      left 600px
    #macao
      top 240px
      left 560px
    #northern_ireland
      top 172px
      left 333px
    #poland
      top 150px
      left 375px
    #united_kingdom
      top 155px
      left 345px

    #elector
      z-index 100
      position absolute
      width 250px
      background-color white
      border 1px solid black
      box-shadow(5px 5px 10px black)
      border-radius(5px)
      padding 10px
      #elector-title
        overflow hidden
        border-bottom 1px solid #ccc
        font-size 18px
        margin-bottom 5px
        img
          float left
        h3
          margin-top 12px
          margin-left 60px
      #elector-info
        color #3b3b3c
        font-size 14px
        text-align justify
        padding-bottom 10px
        border-bottom 1px solid #ccc
        .column
          width 48px
          color #087A91
      #elector-more
        text-align center
      .close
        position absolute
        right 10px
        cursor pointer

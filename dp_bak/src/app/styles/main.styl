@import "reset"
@import "init"

body
  color font-color

#content
  width 960px
  height 750px
  margin 0px auto
  position relative

  #parliament
    position absolute
    top 335px
    left 0px

  #projector
    position absolute
    top 15px
    right 10px
    height 335px
    width 435px

    #projector-content
      display none
      width 372px
      height 270px
      left 28px
      top -8px
      position relative
      border solid 3px black
      background-color white
      overflow hidden

      #projector-text
        margin 15px 20px
        color #555555
        font-size 16px

        span
          color #07798F
          font-weight bold
          font-size 16px

        img
          width 130px
          float left
          margin-right 5px

      #projector-image
        position relative

        img
          position absolute
          top 0px
          left 0px
          display none

    #projector-bottom
      position relative
      top -8px

  #video-list
    position relative

    .video
      cursor pointer
      position absolute
    .video:first-child
      top 20px
      left 130px
    .video+.video
      top -110px
      left 370px
    .video+.video+.video
      top 70px
      left 405px
    .video+.video+.video+.video
      top 50px
      left 750px
  
  #map
    width 785px
    height 550px
    position relative

    >img
      position absolute
    #argentina
      top 370px
      left 230px
    #brazil
      top 300px
      left 250px
    #bulgaria
      top 190px
      left 405px
    #california
      top 200px
      left 130px
    #china
      top 200px
      left 550px
    #european_union
      top 205px
      left 345px
    #greece
      top 215px
      left 395px
    #hong_kong
      top 230px
      left 570px
    #hungary
      top 180px
      left 380px
    #italy
      top 205px
      left 372px
    #japan
      top 205px
      left 600px
    #macao
      top 240px
      left 560px
    #northern_ireland
      top 172px
      left 333px
    #poland
      top 150px
      left 375px
    #united_kingdom
      top 155px
      left 345px


    #elector
      z-index 100
      position absolute
      width 250px
      background-color white
      border 1px solid black
      box-shadow(5px 5px 10px black)
      border-radius(5px)
      img
        float left
      .close
        position absolute
        right 10px
        cursor pointer

